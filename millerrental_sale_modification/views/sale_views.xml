<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_miller_form" model="ir.ui.view">
        <field name="name">sale.order.form.miller</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="start_date" attrs="{'readonly': [('state', '==', 'sale')]}"/>
                <field name="end_date" attrs="{'readonly': [('state', '==', 'sale')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='tax_id']" position="before">
                <field name="po"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='tax_id']" position="after">
                <field name="start_date" attrs="{'readonly': [('state', '==', 'sale')]}"/>
                <field name="end_date" attrs="{'readonly': [('state', '==', 'sale')]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="po"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="start_date" attrs="{'readonly': [('state', '==', 'sale')]}"/>
                <field name="end_date" attrs="{'readonly': [('state', '==', 'sale')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
