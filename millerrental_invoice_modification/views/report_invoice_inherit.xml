<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_miller" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@name='invoice_address']" position="attributes">
                <attribute name="class">col-xs-6</attribute>
            </xpath>
            <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[1]" position="before">
                <th>PO #</th>
            </xpath>
            <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@t-if='display_discount']" position="after">
                <th>Date</th>
            </xpath>
            <xpath expr="//tbody[hasclass('invoice_tbody')]/tr[@t-foreach='o.invoice_line_ids']//td[@t-if='display_discount']" position="after">
                <td>
                    <span t-if="l.start_date" t-field="l.start_date"/>
                    <t t-if="l.end_date">- <span t-field="l.end_date"/></t>
                </td>
            </xpath>
            <xpath expr="//tbody[hasclass('invoice_tbody')]/tr[@t-foreach='o.invoice_line_ids']//span[@t-field='l.name']/.." position="before">
                <td><span t-field="l.line_po"/></td>
            </xpath>
            <xpath expr="//tbody[hasclass('invoice_tbody')]//td[@t-translation='off']" position="before">
                <td></td>
                <td></td>
            </xpath>
        </template>

        <template id="report_invoice_document_inherit_sale_miller" inherit_id="sale.report_invoice_document_inherit_sale">
            <xpath expr="//div[@t-field='o.partner_shipping_id']/../.." position="replace">
            </xpath>
            <xpath expr="//div[@t-field='o.partner_id']/../.." position="replace">
                <div class="row mt64" groups="sale.group_delivery_invoice_address">
                    <div class="col-xs-5 col-xs-offset-1" groups="sale.group_delivery_invoice_address">
                        <div t-field="o.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        <div t-if="o.partner_id.vat" class="mt16"><t t-esc="o.company_id.country_id.vat_label or 'TIN'"/>: <span t-field="o.partner_id.vat"/></div>
                    </div>

                    <div class="col-xs-6" groups="sale.group_delivery_invoice_address">
                        <div t-if="o.partner_shipping_id and (o.partner_shipping_id != o.partner_id)">
                            <strong>Shipping address:</strong>
                            <div t-field="o.partner_shipping_id"
                                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
